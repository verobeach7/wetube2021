header
    a(href="/").header__logo
        i.fab.fa-youtube
        span.header__site-name Premium
    div.header__search-bar 
        form(method="GET" action="/search").search__form
            input(placeholder="Search by title", name="keyword", type="text").search__input
            button.search__btn
                i.fas.fa-search
    nav
        ul 
            if loggedIn
                li 
                    a(href="/videos/upload")
                        i.fa-solid.fa-upload
                li 
                    a(href="/users/edit")
                        i.fa-solid.fa-user-pen
                li 
                    a(href="/users/logout")
                        i.fa-solid.fa-right-from-bracket
                li 
                    a(href=`/users/${loggedInUser._id}`)
                        if !loggedInUser.avatarUrl
                            span ðŸ˜€
                        else 
                            if loggedInUser.avatarUrl.includes("github")
                                img.header__avatar(src=loggedInUser.avatarUrl)
                            else 
                                img.header__avatar(src=loggedInUser.avatarUrl)

            else
                li 
                    a(href="/login") Login
                li 
                    a(href="/join").header__btn Join