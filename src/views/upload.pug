extends base.pug

block content
    div.upload__container
        div.upload__video
            video#preview
            button#actionBtn.social__btn Start Recording
        if errorMessage 
            span=errorMessage
        form(method="POST", enctype="multipart/form-data")
            label(for="video") Video File
            input(accept="video/*", required, type="file", id="video", name="video")
            label(for="thumb") Thumbnail File
            input(accept="image/*", required, type="file", id="thumb", name="thumb")
            input(name="title", placeholder="Title", required, type="text", maxLength=80)
            input(name="description", placeholder="description", required, type="text", minLength=10)
            input(name="hashtags", placeholder="hashtags, seperated by comma.", required, type="text")
            input(type="submit", value="Upload Video")

block scripts 
    script(src="/assets/js/recorder.js")